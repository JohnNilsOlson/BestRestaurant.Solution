@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Cuisine

<h4>Add a New Cuisine</h4>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
  </div>
  <input type="submit" value="Add New Cuisine" class="btn btn-success" />
}

<p>@Html.ActionLink("Show All Cuisines", "Index")</p>
<p>@Html.ActionLink("Back To Homepage", "Index", "Home")</p>