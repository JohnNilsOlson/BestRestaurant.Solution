@{
  Layout = "_Layout"
}

@model BestRestaurant.Models.BestRestaurant

<h2>Edit A Restaurant</h2>

<h4>Editing This Restaurant: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name, new { @class="form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId", new { @class="form-control"})
  </div>
  <input type="submit" value="Save" class="btn btn-info" />
}
<p>@Html.ActionLink("Back to Restaurant List", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
